<section id="projects">
  <div class="container py-5">
    <h2 class="text-primary text-center fs-lg fw-bold my-5">Projects</h2>
    <div class="row">
      <% 6.times do %>
        <div class="col-12 col-lg-4 my-4 p-0">
          <%= render 'shared/project_card' %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center my-5 gap-5">
        <%= link_to 'Contact me', root_path, class: "btn-purple p-3 px-5" %>
        <%= link_to 'View more', root_path, class: "btn-white p-3 px-5" %>
      </div>
  </div>
</section>
